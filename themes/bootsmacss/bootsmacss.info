name = BootSMACSS base theme
description = BootSMACSS base theme containing rewrites for BootSMACSS library
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[header] = 'Header'
regions[navigation] = 'Navigation'
regions[sidebar_first] = 'Body primary sidebar'
regions[content] = 'Body main content'
regions[sidebar_second] = 'Body secondary sidebar'
regions[footer] = 'Footer'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = css/style.css


For information on choosing the desired method, please read the Drupal
Bootstrap sub-theme "how-to" documentation:
https://drupal.org/node/1978010

;----------------------------------
; METHOD 1: Bootstrap Source Files
;----------------------------------

;;;;;;;;;;;;;;;;;;;;;
;; Scripts
;;;;;;;;;;;;;;;;;;;;;

;scripts[] = 'bootstrap-sass/javascripts/bootstrap/affix.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/alert.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/button.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/carousel.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/collapse.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/dropdown.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/modal.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/tooltip.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/popover.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/scrollspy.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/tab.js'
;scripts[] = 'bootstrap-sass/javascripts/bootstrap/transition.js'
scripts[] = 'js/modernizr.js'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''


; ;-------------------------
; ; METHOD 2: Bootstrap CDN
; ;-------------------------
;
; Method 2 uses BootstrapCDN, the only thing you might need to provide here
; is overrides to Bootstrap theme settings. Copy them here from the base theme
; to override.


;;;;;;;;;;;;;;;;;;;;;
;; Breakpoints
;;;;;;;;;;;;;;;;;;;;;
breakpoints[desktop] = (min-width: 992px)
breakpoints[tablet] = (min-width: 768px)
breakpoints[phone] = (min-width: 0px)
